@page "/fetchdata"

<PageTitle>@PageTitle</PageTitle>

<p>This component demonstrates fetching data from a service.</p>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Login</th>
                <th>Nom</th>
                <th>Profil</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Login</td>
                    <td>@user.Nom</td>
                    <td>@user.Profil.Libelle</td>
                    <td>@user.Age</td>
                </tr>
            }
        </tbody>
    </table>
}
