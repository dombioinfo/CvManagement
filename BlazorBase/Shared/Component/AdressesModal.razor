@using Blazorise

<Modal @ref="modalAdresseRef">
    <ModalContent Centered>
        <ModalHeader>
            <ModalTitle>@Title</ModalTitle>
            <CloseButton />
        </ModalHeader>
        <ModalBody>
            <AdresseForm></AdresseForm>
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Secondary" Clicked="@HideModal">Annuler</Button>
            <Button Color="Color.Primary" Clicked="@HideModal">Valider</Button>
        </ModalFooter>
    </ModalContent>
</Modal>
